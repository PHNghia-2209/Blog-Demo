<div class="mt-4">
  <form method="POST">
    <div class="form-group">
      <label for="search-input">Keyword</label>
      <input type="text" name="q" class="form-control" id="search-input" placeholder="Keyword" />
    </div>
    <div class="form-group">
      <label for="gender-input">Select</label>
      <select name="gender" class="form-control" id="gender-input">
        <option value="">--- Select Your Gender ---</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
</div>